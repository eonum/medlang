!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : 'Medlang'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"

  %body
    .navbar.navbar-inverse.navbar-static-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href="#{root_url}")
          %i.fa.fa-user-md
          Medlang
        .navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav
            %li= link_to fa_icon('exclamation-circle', 'About'), root_url
          %ul.nav.navbar-nav.navbar-right
            %li
              =link_to content_tag(:span, ' Category Library', :class => 'glyphicon glyphicon-book', :aria => {:hidden => "true"}), categories_path
            %li
              =link_to content_tag(:span, ' New Category', :class => 'glyphicon glyphicon-plus', :aria => {:hidden => "true"}), new_category_path
            %li
              =link_to content_tag(:span, ' Card Library', :class => 'glyphicon glyphicon-book', :aria => {:hidden => "true"}), words_path
            %li
              =link_to content_tag(:span, ' New Card', :class => 'glyphicon glyphicon-plus', :aria => {:hidden => "true"}), new_word_path
            %li
              =link_to content_tag(:span, ' Login', :class => 'glyphicon glyphicon-log-in', :aria => {:hidden => "true"}), root_url
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                = fa_icon('flag', current_language)
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to 'Deutsch', params.merge({ locale: :de })
                %li= link_to 'Francais', params.merge({ locale: :fr })
                %li= link_to 'Italiano', params.merge({ locale: :it })
                %li= link_to 'English', params.merge({ locale: :en })
    -# Content form different pages start here
    .container
      = yield
    -#Footer content
    #push
    .footer.navbar-fixed-bottom
      .container-fluid
        .row.spacer
          .col-md-12
        .row
          .col-md-6.col-md-offset-3
            %p.text-center
              eonum AG
              %br
              Tscharnerstrasse 41
              %br
              CH-3007 Bern
              %br
              %a{href: "http://eonum.ch"} www.eonum.ch
              %br
              E-Mail: #{mail_to 'info@eonum.ch'}
              %br