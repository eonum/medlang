%h1=@word.name

.row
.col-lg-12.flash-card-content
  = @word.description
.row.border-between
.col-lg-6.flash-card-sub-heading.border-right
  = t('word_syntactical_category')
  .row
    .col-lg-12.flash-card-content.border-right
      = @word.syntactical_category

.col-lg-6.flash-card-sub-heading
  = t('word_semantical_category')
  .row
    .col-lg-12.flash-card-content
      /= @word.semantical_categories[0]('name_de')

.row
  .col-lg-12
    %br
    %p
      %a.btn.btn-primary{:href => edit_word_path(@word), :role => "button"}
        =t('edit')
      %a.btn.btn-primary{:href => words_path, :role => "button"}
        =t('back')
    %br
    - if @word.id != Word.asc(:id).first
      .btn.btn-default.btn-xs
        = link_to 'Karte zurück', Word.get_previous_word(@word)
    - if @word.id != Word.asc(:id).last
      .btn.btn-default.btn-xs.pull-right
        = link_to  'Nächste Karte', Word.get_next_word(@word)