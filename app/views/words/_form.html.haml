= form_for @word do |w| {:autocomplete => "off", :role => "form"}
  %h2
    =@word.name locale
  .controls
  = render 'shared/error_messages'
  .form-group
    = w.label t("word_name")
    = w.text_field "name_#{locale}", class: "form-control" # with "name_#{locale}" i don't need to create a if loop for the languages because it takes the endings automatically
  %br
  .field
    = w.label t("word_description")
    = w.text_area "description_#{locale}", class: "form-control"
  .field
    - categories = Category.where(:name_de.exists => true)
    = w.label t("word_syntactical_category")
    = w.select :syntactical_category, options_for_select(categories.collect{|c| [c.name_de, c.id]})
    = w.label t("word_semantical_category")
    - categories = Category.where(category_type: 'semantic')
    .input-append
      = select_tag 'word[semantical_categories_ids][]', options_for_select( categories.collect{|c| [c.name_de, c.id]}, { include_blank: true}), class: 'category-select span2', id: 'appendedInputButton'
    %button.btn.btn-default{:type => "button", :id => "add"}
      %span.fa.fa-plus
    %button.btn.btn-default{type: 'button', id: 'remove'}
      %span.fa.fa-minus
  %br
  %button.btn.btn-default{:type => "submit"}
    %i.fa.fa-floppy-o
      = t('save')
  %a.btn.btn-default.pull-right{:href => words_path, :role => "button"}
    %i.fa.fa-times
      =t('back')