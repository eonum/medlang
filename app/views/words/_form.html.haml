= form_for @word do |w|
  = render 'shared/error_messages'
  .field
    = w.label :name
    = w.text_field :name
  .field
    = w.label :description
    = w.text_area :description
  .field
    - categories = Category.where('type_de' => 'syntax')
    = w.label :syntactical_category
    = w.select :syntactical_category, options_for_select(categories.collect{|c| [c.name_de]})
  .field
    = w.label "Semantical Categories"
    %br
    %span
      = select_tag 'word[semantical_categories][]', options_for_select( Word.all.collect{|word| [word.name,[word.id,word.name]]}, { include_blank: true})
    %span{onclick: "$(this).prev().append(listEntry.replace(\"@@word@@\", \"word[semantical_categories][]\"));", title: ""} Add value

  %br
  .btn.btn-primary.btn-block
    = w.submit 'Save', :class => 'no-border'


:javascript
  var listEntry = "<span>#{j select_tag 'word[semantical_categories][]', options_for_select( Word.all.collect{|word| [word.name,word.id]}, { include_blank: true})}"
  + "#{j image_tag '/images/icons/bullet_toggle_minus.png', :title =>'delete', :onclick => '$(this).closest(\'span\').remove()', :class => 'delete_button_array_list'}</span>";