= form_for @word do |w| {:autocomplete => "off", :role => "form"}
  .controls
  = render 'shared/error_messages'
  .form-group
    = w.label t("word_name")
    = w.text_field :name, class: "form-control"
  %br
  .field
    = w.label t("word_description")
    = w.text_area :description, class: "form-control"
  .field
    - categories = Category.where('type_de' => 'syntax')
    = w.label t("word_syntactical_category")
    = w.select :syntactical_category, options_for_select(categories.collect{|c| [c.name_de, c.id]})
    = w.label t("word_semantical_category")
    - categories = Category.where(type_de: 'semantical')
    .input-append
      = select_tag 'word[semantical_categories_ids][]', options_for_select( categories.collect{|c| [c.name_de, c.id]}, { include_blank: true}), class: 'category-select span2', id: 'appendedInputButton'
    %button.btn.btn-default{:type => "button", :id => "add"}
      %span.fa.fa-plus
    %button.btn.btn-default{type: 'button', id: 'remove'}
      %span.fa.fa-minus
  %br
  .btn.btn-primary.btn-block
    = w.submit t("save"), :class => 'no-border'
  %br
.row
  .col-md-2.col-md-offset-5
    %a.btn.btn-primary.btn-block{:href => words_path, :role => "button"}
      =t('back')