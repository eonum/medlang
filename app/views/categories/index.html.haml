%h1
  = t('category_overview')
-for c in @category
  -if (c.name locale).to_s.empty? == false
    .row
      .col-lg-12
        .panel.panel-default
          .panel-heading
            = c.name locale

            .btn.btn-default.btn-xs.pull-right
              =link_to t('edit'), edit_category_path(c)
            .btn.btn-default.btn-xs.pull-right
              = link_to t('delete'), c, method: :delete, data: { confirm: t('confirmation_question') }
          .panel-body
            = c.description locale